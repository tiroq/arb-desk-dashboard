{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PlatformIO: Build",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "PlatformIO: Upload",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run",
                "--target",
                "upload"
            ],
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "PlatformIO: Build and Upload",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run",
                "--target",
                "upload"
            ],
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "group": "build",
            "problemMatcher": [
                "$platformio"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "PlatformIO: Clean",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/firmware"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
